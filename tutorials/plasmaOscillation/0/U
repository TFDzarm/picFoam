FoamFile
{
    version     2.0;
    format      ascii;
    class       volVectorField;
    location    "0";
    object      U;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [0 1 -1 0 0 0 0];

internalField   uniform (0 0 0);

boundaryField
{
    leftBoundary
    {
        type            cyclic;
    }
    rightBoundary
    {
        type            cyclic;
    }
    upperBoundary
    {
        type            cyclic;
    }
    lowerBoundary
    {
        type            cyclic;
    }
    frontBoundary
    {
        type            cyclic;
    }
    backBoundary
    {
        type            cyclic;
    }
}


